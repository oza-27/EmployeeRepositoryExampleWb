@model Employee

<form method="post" style="background-image:radial-gradient(lightpink, grey);">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary text-dark text-center">Edit Info of Employee</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Technology"></label>
			<input asp-for="Technology" class="form-control" />
			<span asp-validation-for="Technology" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-outline-dark" style="width:150px">Edit</button>
		<a asp-controller="Employee" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
