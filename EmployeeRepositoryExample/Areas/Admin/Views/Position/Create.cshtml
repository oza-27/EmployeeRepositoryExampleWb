@model Position

<form method="post" style="background-image:linear-gradient(grey,aqua)">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary text-dark text-center">Add Position</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="Designation"></label>
			<input asp-for="Designation" class="form-control" />
			<span asp-validation-for="Designation" class="text-danger"></span>
		</div>
		
		<button type="submit" class="btn btn-primary" style="width:150px">Add</button>
		<a asp-controller="Position" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
