@model IEnumerable<Position>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-black text-capitalize"><i>Position List</i></h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Position" asp-action="Create" class="btn btn-outline-dark">
                <i class="bi bi-plus-circle"></i> &nbsp; Add a new Position
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped text-center" style="width:100%;background-image:linear-gradient(yellow,green)">
        <thead>
            <tr>
                <th> Designation / Position </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Designation
                    </td> 

                    <td>
                        <div class="text-center">
                            <a class="btn btn-outline-dark mx-2" asp-controller="Position" asp-action="Edit" asp-route-id="@obj.Id"> Edit </a>
                            <a class="btn btn-outline-dark mx-2" asp-controller="Position" asp-action="Delete" asp-route-id="@obj.Id"> Delete </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
